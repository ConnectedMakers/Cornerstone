<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp" android:paddingTop="10dp"
    android:clickable="true">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/notificationPic"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:layout_gravity="left"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reject"
        android:paddingTop="10dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/Accept"
        android:src="@mipmap/ic_close_round_button_512" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Accept"
        android:paddingTop="10dp"
        android:layout_gravity="end"
        android:paddingRight="5dp"
        android:src="@mipmap/ic_check_mark_md"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTintMode="@android:color/transparent"
        android:background="@android:color/transparent"
        android:clickable="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationName"
        android:paddingLeft="@dimen/eventOffset"
        android:paddingTop="20dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/position" />

</RelativeLayout>